<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_300sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:background="@color/white"
             android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/reddish"
        android:layout_marginStart="@dimen/_40sdp"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/dialog_backBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_backBtn"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/reddish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Order Confirm?"
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="@dimen/_24ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_backBtn" />


    <TextView
        android:id="@+id/allAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*All Products will be cancel include with this Order Id"
        android:textColor="@color/grey"
        android:visibility="gone"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/reddish"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Confirm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allAlert" />
</androidx.constraintlayout.widget.ConstraintLayout>